<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/pic2"
    tools:context=".allactivity.WorkingDetailActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detail Working"
        android:textColor="@color/duskYellow"
        android:textSize="40dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Work ID: "
            android:textStyle="bold"
            android:textColor="@color/duskYellow"
            android:layout_marginLeft="@dimen/dp20"
            android:textSize="20dp"/>
            <TextView
                android:id="@+id/txtWorkID"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Work Name: "
            android:textStyle="bold"
            android:textColor="@color/duskYellow"
            android:layout_marginLeft="@dimen/dp20"
            android:textSize="20dp"/>
            <TextView
                android:id="@+id/txtWorkName"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/duskYellow"
            android:layout_marginLeft="@dimen/dp20"
            android:text="Work Description: "
            android:textSize="20dp"/>
            <TextView
                android:id="@+id/txtWorkDes"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Work Process: "
            android:textStyle="bold"
            android:textColor="@color/duskYellow"
            android:layout_marginLeft="@dimen/dp20"
            android:textSize="20dp"/>
            <TextView
                android:id="@+id/txtWorkProcess"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mark Description: "
            android:textStyle="bold"
            android:textColor="@color/duskYellow"
            android:layout_marginLeft="@dimen/dp20"
            android:textSize="20dp"/>
            <TextView
                android:id="@+id/txtDescription"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: "
            android:textStyle="bold"
            android:textColor="@color/duskYellow"
            android:layout_marginLeft="@dimen/dp20"
            android:textSize="20dp"/>
            <TextView
                android:id="@+id/txtStatus"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Create:"
            android:textStyle="bold"
            android:textColor="@color/duskYellow"
            android:layout_marginLeft="@dimen/dp20"
            android:textSize="20dp"/>
            <TextView
                android:id="@+id/txtUserCreate"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Handle: "
            android:textStyle="bold"
            android:textColor="@color/duskYellow"
            android:layout_marginLeft="@dimen/dp20"
            android:textSize="20dp"/>
            <TextView
                android:id="@+id/txtUserHandle"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mark: "
            android:textStyle="bold"
            android:textColor="@color/duskYellow"
            android:layout_marginLeft="@dimen/dp20"
            android:textSize="20dp"/>
            <TextView
                android:id="@+id/txtMark"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time Mark: "
            android:textStyle="bold"
            android:textColor="@color/duskYellow"
            android:layout_marginLeft="@dimen/dp20"
            android:textSize="20dp"/>
            <TextView
                android:id="@+id/txtTimeMark"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time From: "
            android:textStyle="bold"
            android:textColor="@color/duskYellow"
            android:layout_marginLeft="@dimen/dp20"
            android:textSize="20dp"/>
            <TextView
                android:id="@+id/txtTimeFrom"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time To: "
            android:textStyle="bold"
            android:textColor="@color/duskYellow"
            android:layout_marginLeft="@dimen/dp20"
            android:textSize="20dp"/>
            <TextView
                android:id="@+id/txtTimeTo"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time Create: "
            android:textStyle="bold"
            android:textColor="@color/duskYellow"
            android:layout_marginLeft="@dimen/dp20"
            android:textSize="20dp"/>
            <TextView
                android:id="@+id/txtTimeCreate"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Finish: "
            android:textStyle="bold"
            android:textColor="@color/duskYellow"
            android:layout_marginLeft="@dimen/dp20"
            android:textSize="20dp"/>
            <TextView
                android:id="@+id/txtConfirmFinish"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp40"
                    android:layout_gravity="center|bottom"
                    android:background="@drawable/radius_5_half"
                    android:textColor="@color/white"
                    android:layout_margin="@dimen/dp5"
                    android:textSize="@dimen/dp10"
                    android:text="Update Status"
                    android:onClick="clickToUpdate"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp40"
                    android:layout_gravity="center|bottom"
                    android:layout_margin="@dimen/dp5"
                    android:textSize="@dimen/dp10"
                    android:background="@drawable/radius_5_half"
                    android:textColor="@color/white"
                    android:text="Update Information"
                    android:onClick="clickToUpdateInfo"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>