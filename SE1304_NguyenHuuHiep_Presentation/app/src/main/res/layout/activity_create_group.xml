<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/pic2"
    tools:context=".allactivity.CreateGroupActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/duskYellow"
        android:text="Create New Group"
        android:textSize="30dp"
        android:textStyle="bold" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Group ID"
        android:textColorHint="@color/white"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtGroupId"
            android:drawablePadding="@dimen/dp10"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/white"
            android:inputType="text"
            android:focusable="true"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Group Name"
        android:textColorHint="@color/white"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtGroupName"
            android:drawablePadding="@dimen/dp10"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/white"
            android:inputType="text"
            android:focusable="true"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp30"
        android:text="Manager: "
        android:textSize="18dp"/>
    <Spinner
        android:id="@+id/spUsername"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/test"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/dp10"
        android:gravity="center" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_gravity="center|bottom"
        android:background="@drawable/radius_5_half"
        android:layout_margin="@dimen/dp20"
        android:textColor="@color/white"
        android:textSize="@dimen/dp20"
        android:text="Create"
        android:onClick="clickToCreateNewGroup"/>

</LinearLayout>