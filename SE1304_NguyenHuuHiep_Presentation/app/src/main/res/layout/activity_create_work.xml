<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".allactivity.CreateWorkActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Working"
        android:textSize="40dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Work ID: "
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/edtWorkID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Work Name: "
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/edtWorkName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Work Description: "
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/edtWorkDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Work Process: "
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/edtWorkProcess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time From: "
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/edtTimeFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="dd/MM/yyyy"
                android:inputType="none"
                android:editable="false"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time To: "
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/edtTimeTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="dd/MM/yyyy"
                android:inputType="none"
                android:editable="false"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Working"
                android:layout_gravity="center"
                android:onClick="clickToInsert"/>\
        </LinearLayout>
    </ScrollView>
</LinearLayout>